                <thead>
                <tr>
                  <th> <i class="fas fa-key"></i> Id</th>
                  <th>Titre</th>
                  <th>Description</th>
                  <th>Contenu</th>
                  <th>Date_publication</th>
                  <th>Auteur</th>
                  <th>Avg_rating</th>
                  <th>User</th>
                  <th>Category</th>
                  <th>actions</th>
                </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                {% for article in articles %}

                  <tr class=" card-action card-expand">
                    <td><strong>{{ article.id }}</strong></td>
                    <td>{{ article.titre }}</td>
                    <td>
                      {{ article.description }}
                    </td>
                    <td>
                      {#<p>
                        <button class="btn btn-sm btn-primary me-1" type="button" data-bs-toggle="collapse" data-bs-target="#Target{{ article.id }}" aria-expanded="true" aria-controls="Target{{ article.id }}">
