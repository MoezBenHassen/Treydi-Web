        // Select all anchor tags with an href attribute
        const allLinks = document.querySelectorAll('a[href]');

        // Loop through all the links
        allLinks.forEach(link => {

            // Check if the link href ends with ".jpg" or ".png"
            if (link.href.endsWith('.jpg') || link.href.endsWith('.png')) {
                // Add a class to the anchor tag with the image inside
                link.classList.add('image-link');
            }

            // Check if the link has innerText equal to "Download"
            if (link.innerText === "Download") {
                // Add a class to the anchor tag with the "Download" text inside
                link.classList.add('download-link');
            }
        });

